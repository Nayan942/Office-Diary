<% include partials/header%>

<div class="container">

    <div class="row"> 
        <div style="text-align:center;width:30%;margin:25px auto;">
            <h1>Edit Task </h1>
        </div>
        
        <div style="width:30%;margin:25px auto;">
            <form action="/users/<%=user_id%>/task/<%=task._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type = text value="<%=task.text%>" name="task[text]" >
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Update</button>
                </div>
            </form>
            <a href="/users">Go Back</a>
        </div>
    </div>
</div>

