<% include partials/header%>

<div class="container">

    <div class="row"> 
        <div style="text-align:center;width:30%;margin:25px auto;">
            <h1>Edit <%=user.name%></h1>
        </div>
        
        <div style="width:30%;margin:25px auto;">
            <form action="/users/<%=user._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" required type=text value="<%=user.name%>" name="user[name]" >
                </div>
                <div class="form-group">
                    <input class="form-control" required type=email value="<%=user.email%>" name="user[email]" >
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Update</button>
                </div>
            </form>
            <a href="/users">Go Back</a>
        </div>
    </div>
</div>

<% include partials/footer%>